<%- include('../partials/header') %>

<div class="container">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1><%= project.name %></h1>
    <div>
      <a href="/projects/<%= project.id %>/edit" class="btn btn-outline-primary me-2">
        <i class="fas fa-edit"></i> Edit
      </a>
      <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteProjectModal">
        <i class="fas fa-trash"></i> Delete
      </button>
    </div>
  </div>

  <div class="row mb-4">
    <div class="col-md-8">
      <div class="card shadow-sm mb-4">
        <div class="card-header">
          <h4>Details</h4>
        </div>
        <div class="card-body">
          <div class="mb-3">
            <strong>Description:</strong>
            <p><%= project.description || 'No description provided.' %></p>
          </div>
          
          <div class="row">
            <div class="col-md-6 mb-3">
              <strong>Status:</strong>
              <span class="badge <%= 
                project.status === 'Not Started' ? 'bg-secondary' : 
                project.status === 'In Progress' ? 'bg-primary' : 
                project.status === 'On Hold' ? 'bg-warning' : 
                'bg-success' 
              %>"><%= project.status %></span>
            </div>
            
            <div class="col-md-6 mb-3">
              <strong>Created By:</strong>
              <span><%= project.creator_name || 'Unknown' %></span>
            </div>
          </div>
          
          <div class="row">
            <div class="col-md-6 mb-3">
              <strong>Start Date:</strong>
              <div><%= project.start_date ? new Date(project.start_date).toLocaleDateString() : 'Not set' %></div>
            </div>
            
            <div class="col-md-6 mb-3">
              <strong>End Date:</strong>
              <div><%= project.end_date ? new Date(project.end_date).toLocaleDateString() : 'Not set' %></div>
            </div>
          </div>
          
          <div>
            <strong>Created On:</strong>
            <div><%= new Date(project.created_at).toLocaleString() %></div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-md-4">
      <div class="card shadow-sm">
        <div class="card-header bg-light">
          <h4>Project Stats</h4>
        </div>
        <div class="card-body">
          <div class="mb-3">
            <h6>Task Status</h6>
            <div class="progress" style="height: 25px;">
              <% 
                const total = tasks.length;
                const todo = tasks.filter(task => task.status === 'To Do').length;
                const inProgress = tasks.filter(task => task.status === 'In Progress').length;
                const done = tasks.filter(task => task.status === 'Done').length;
                
                const todoPercent = total ? Math.round((todo / total) * 100) : 0;
                const inProgressPercent = total ? Math.round((inProgress / total) * 100) : 0;
                const donePercent = total ? Math.round((done / total) * 100) : 0;
              %>
              
              <div class="progress-bar bg-secondary" style="width: <%= todoPercent %>%" 
                role="progressbar" aria-label="To Do">
                <%= todo %>
              </div>
              <div class="progress-bar bg-primary" style="width: <%= inProgressPercent %>%" 
                role="progressbar" aria-label="In Progress">
                <%= inProgress %>
              </div>
              <div class="progress-bar bg-success" style="width: <%= donePercent %>%" 
                role="progressbar" aria-label="Done">
                <%= done %>
              </div>
            </div>
            <div class="d-flex justify-content-between mt-2 small">
              <span>To Do</span>
              <span>In Progress</span>
              <span>Done</span>
            </div>
          </div>
          
          <div>
            <h6>Total Tasks: <%= tasks.length %></h6>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Tasks Section -->
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Tasks</h2>
    <a href="/tasks/new?project_id=<%= project.id %>" class="btn btn-primary">
      <i class="fas fa-plus"></i> Add Task
    </a>
  </div>

  <% if (tasks.length === 0) { %>
    <div class="alert alert-info">
      No tasks found for this project. <a href="/tasks/new?project_id=<%= project.id %>" class="alert-link">Add a task</a>.
    </div>
  <% } else { %>
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Title</th>
            <th>Assigned To</th>
            <th>Due Date</th>
            <th>Priority</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% tasks.forEach(task => { %>
            <tr>
              <td><%= task.title %></td>
              <td><%= task.assigned_username || 'Unassigned' %></td>
              <td><%= task.due_date ? new Date(task.due_date).toLocaleDateString() : 'Not set' %></td>
              <td>
                <span class="badge <%= 
                  task.priority === 'Low' ? 'bg-info' : 
                  task.priority === 'Medium' ? 'bg-warning' : 
                  'bg-danger' 
                %>"><%= task.priority %></span>
              </td>
              <td>
                <span class="badge <%= 
                  task.status === 'To Do' ? 'bg-secondary' : 
                  task.status === 'In Progress' ? 'bg-primary' : 
                  'bg-success' 
                %>"><%= task.status %></span>
              </td>
              <td>
                <div class="btn-group">
                  <a href="/tasks/<%= task.id %>" class="btn btn-sm btn-outline-primary">View</a>
                  <a href="/tasks/<%= task.id %>/edit?from_project=true" class="btn btn-sm btn-outline-secondary">Edit</a>
                  <button type="button" class="btn btn-sm btn-outline-danger" 
                    data-bs-toggle="modal" data-bs-target="#deleteTask<%= task.id %>">
                    Delete
                  </button>
                </div>
              </td>
            </tr>
            
            <!-- Delete Task Modal -->
            <div class="modal fade" id="deleteTask<%= task.id %>" tabindex="-1">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title">Delete Task</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    Are you sure you want to delete "<%= task.title %>"? This action cannot be undone.
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form action="/tasks/<%= task.id %>/delete?from_project=true" method="POST">
                      <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          <% }) %>
        </tbody>
      </table>
    </div>
  <% } %>

  <!-- Delete Project Modal -->
  <div class="modal fade" id="deleteProjectModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Delete Project</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <p>Are you sure you want to delete "<%= project.name %>"?</p>
          <p class="text-danger"><strong>Warning:</strong> This will also delete all tasks associated with this project. This action cannot be undone.</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <form action="/projects/<%= project.id %>/delete" method="POST">
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %> 